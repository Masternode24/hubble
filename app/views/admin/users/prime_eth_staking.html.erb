<% content_for :body_class, 'admin-user-show' %>

<h2 class='header'>
  <div>
    <label class='text-muted'>Prime ETH Staking: </label>
    <%= @user.name %> <small class='text-muted'><%= @user.email %></small>
  </div>
  <div class='d-flex justify-content-end align-items-center'>
    <a class='btn btn-sm btn-outline-secondary mt-1' href='<%= admin_users_path %>'>back</a>
  </div>
</h2>

<div class='row clearfix pt-3'>
  <div class='col-6'>
    <%= form_for @user, url: prime_eth_staking_admin_user_path(@user), method: :put do |f| -%>
      <% if @user.errors.any? -%>
        <div class='alert alert-warning'>
          <strong>Sorry, we couldn't <%= @user.persisted? ? 'do that.' : 'sign you up.' %></strong>
          <ul class='mb-0 pl-4'>
            <% @user.errors.full_messages.each do |msg| -%>
              <li><%= msg %></li>
            <% end -%>
          </ul>
        </div>
      <% end -%>

      <div class='form-group'>
        <%= f.text_field :prime_eth_staking_customer_id, placeholder: 'Internal customer ID', class: 'form-control form-input' %>
      </div>
      <div class='form-group'>
        <%= f.check_box :prime_eth_staking_enabled %>
        <%= f.label :prime_eth_staking_enabled, "Staking Management Enabled" %>
      </div>
      <div class='d-flex'>
        <%= f.submit class: 'button-primary', value: 'Save Changes' %>
      </div>
    <% end %>
  </div>
</div>
