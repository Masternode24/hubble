 <div class="col-12 d-flex justify-content-center mt-2">
  <% if @current_page > 1 %>
    <%= link_to request.params.merge(page: @current_page - 1), id: 'prev-page', class: "btn btn-outline-secondary btn-sm" do %>
      <span class="fas fa-fw fa-chevron-left" ></span>
    <% end %>
  <% end %>
  <span class="mr-3 ml-3 align-self-center" > Page <%= @current_page %></span>
  <%= link_to request.params.merge(page: @current_page + 1), id: 'next-page', class: "btn btn-outline-secondary btn-sm" do %>
    <span class="fas fa-fw fa-chevron-right"></span>
  <% end %>
</div>
