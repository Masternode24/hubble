<h2 class='header'>Editing <%= @network.name %> Network</h2>
<%= form_for @network, url: prime_admin_network_path(@network) do |f| %>

  <div class='row'>
    <div class='col-12 col-md-4'>
    
      <div class='form-group'>
        <label class='d-block'>Network Name</label>
        <%= f.text_field :name, class: 'form-control', placeholder: "#{@network.name}" %>
      </div>

      <%= f.submit 'Update Network', class: 'btn btn-lg btn-primary mb-3' %>
    </div>
  </div>
<% end -%>
