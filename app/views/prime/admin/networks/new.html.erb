<h2 class='header'>New Network</h2>

<%= form_for @network, url: prime_admin_networks_path do |f| %>

  <div class='row'>
    <div class='col-12 col-md-4'>
    
      <div class='form-group'>
        <label class='d-block'>Network Name</label>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
      </div>

      <%= f.submit 'Create Network', class: 'btn btn-lg btn-primary mb-3' %>
    </div>
  </div>
<% end -%>
