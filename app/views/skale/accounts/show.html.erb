<% content_for :body_class, "account-show" %>

<%= render "/shared/dh_banner_script" %>
<% content_for :additional_header_tabs do %>
  <%= render partial: 'shared/chain_header_link', locals: { active_tab: '', link_text: 'Accounts', link_path:  skale_chain_accounts_path(@chain) } %>
  <%= render partial: 'shared/chain_header_link', locals: { active_tab: '', link_text: 'Events', link_path:  skale_chain_events_path(@chain) } %>
<% end %>

<%= render partial: "shared/chain_header", locals: { active_tab: '' } %>

<%= render_flash_messages %>

<div class='container'>
  <div class='content'>
    <%= link_to skale_chain_accounts_path(@chain), class: "link text-uppercase" do %>
      <span class="fas fa-chevron-left"></span> back
    <% end %>
    <div class="data-block my-2 pb-0">
      <% if @account %>
        <label class="data-block__title"><%= @account.type %></label>
      <% end %>
      <div class='data-block__value d-block word-break'>
        <%= params[:id] %>
      </div>
      <% if @validator %>
        <h5 class='pt-4'>
          <label class='text-muted'>Validator Details - </label>
          <%= link_to @validator.name, skale_chain_validator_path(@chain, @validator.id), class: 'technical' %>
        </h5>
      <% end %>
    </div>
    <div class="row info-cards">
      <div class="col-12 col-md-12 order-1 order-md-0">
        <%= render "skale/accounts/sections/account_data", delegations: @delegations %>
      </div>
    </div>
  </div>
</div>
