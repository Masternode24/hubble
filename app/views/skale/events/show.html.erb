<% content_for :body_class, 'events-show' %>

<% content_for :additional_header_tabs do %>
  <%= render partial: 'shared/chain_header_link', locals: { active_tab: '', link_text: 'Accounts', link_path:  skale_chain_accounts_path(@chain) } %>
  <%= render partial: 'shared/chain_header_link', locals: { active_tab: '', link_text: 'Events', link_path:  skale_chain_events_path(@chain) } %>
<% end %>
<%= render partial: "shared/chain_header", locals: { active_tab: '' } %>

<div class='container'>
  <div class='content'>
    <%= link_to skale_chain_events_path(@chain), class: "link text-uppercase" do %>
      <span class="fas fa-chevron-left"></span> back
    <% end %>
    <div class="data-block my-2 pb-0">
      <%= render partial: "skale/events/sections/event_data" %>

      <div class='mt-3'>
        <%= link_to skale_chain_events_path(@chain, id: @validator.id), class: "button-secondary d-flex align-items-center justify-content-center mt-2" do %>
          show all <span class='fas fa-chevron-right  ml-1'></span>
        <% end -%>
      </div>
    </div>
  </div>
</div>
