<h3>
  Validator Event for
    <%= link_to ('NodeID-' + @event.item_id), avalanche_chain_validator_path(@chain, 'NodeID-' + @event.item_id) %>
</h3>
<div class='mt-3'>
  <div class='d-flex align-items-center text-lg'>
    <div class="mr-3 event-details event-<%= @event.type %>">
    </div>
    <div class='event-content event-information'>
      <span class='paragraph'>
        <%= format_avalanche_event_data(@event).html_safe %> on <%= @event.block_height %>
      </span>
    </div>
    <span class='timestamp text-sm text-muted text-nowrap ml-auto'>
      <%= format_date(@event.timestamp) %>
    </span>
  </div>
</div>
