<% content_for :body_class, 'events-show' %>

<% content_for :additional_header_tabs do %>
  <%= render partial: 'shared/chain_header_link', locals: { active_tab: '', link_text: 'Search', link_path:  avalanche_chain_transactions_url(@chain) } %>
  <%= render partial: 'shared/chain_header_link', locals: { active_tab: '', link_text: 'Events', link_path:  avalanche_chain_events_url(@chain) } %>
<% end %>
<%= render partial: "shared/chain_header", locals: { active_tab: '' } %>

<div class='container'>
  <div class='content'>
    <%= link_to avalanche_chain_events_path(@chain), class: "link text-uppercase" do %>
      <span class="fas fa-chevron-left"></span> back
    <% end %>
    <div class="data-block my-2 pb-0">
      <%= render partial: "avalanche/events/sections/event_data" %>

      <div class='mt-3'>
        <%= link_to avalanche_chain_transaction_path(@chain, @event.tx_hash), class: "button-secondary d-flex align-items-center justify-content-center mt-2" do %>
          Transaction details <span class='fas fa-chevron-right  ml-1'></span>
        <% end -%>
      </div>
      <div class='mt-3'>
        <%= link_to avalanche_chain_events_path(@chain, validator_id: @event.item_id), class: "button-secondary d-flex align-items-center justify-content-center mt-2" do %>
          Show all Validator Events <span class='fas fa-chevron-right  ml-1'></span>
        <% end -%>
      </div>
    </div>
  </div>
</div>
