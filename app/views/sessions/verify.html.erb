<h2 class='page-title text-center d-block'>Verify Login</h2>
<div class='row clearfix pt-3'>
  <div class='col-12 col-md-4 offset-md-4'>
    <%= form_with url: login_verify_path, method: 'post', local: true do %>
      <% if flash[:error] %>
        <div class='alert alert-danger'><%= flash[:error] %></div>
      <% end %>

      <p>Use your app to get an authentication code, and enter it below to finish logging in.</p>

      <div class='form-group'>
        <input type='text' name='otp_code' class='form-input form-control' placeholder='Enter OTP code' autocomplete='off' maxlength='6' />
      </div>

      <div class='d-flex justify-content-center'>
        <input type='submit' value='verify' class='button-primary' />
      </div>
    <% end %>
  </div>
</div>
