<% content_for :body_class, 'events-show' %>
<%= render partial: 'near/base/chain_header', locals: { active_tab: '' } %>

<div class='container'>
  <div class='content'>
    <%= link_to near_chain_events_path(@chain), class: "link text-uppercase" do %>
      <span class="fas fa-chevron-left"></span> back
    <% end %>
    <div class="data-block my-2 pb-0">
      <%= render partial: "near/events/sections/event_data" %>

      <div class='mt-3'>
        <%= link_to near_chain_events_path(@chain, id: @event.item_id), class: "button-secondary d-flex align-items-center justify-content-center mt-2" do %>
          show all <span class='fas fa-chevron-right  ml-1'></span>
        <% end -%>
      </div>
    </div>
  </div>
</div>
